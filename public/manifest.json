{
  "manifest_version": 3,
  "name": "Coinsearch Extension",
  "version": "0.1.0",
  "description": "An extension to search for coins on CoinMarketCap and X (Twitter)",
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Coinsearch Extension",
    "default_popup": "popup.html"
  },
  "permissions": [
    "contextMenus",
    "storage"
  ]
}